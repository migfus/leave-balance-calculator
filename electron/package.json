{
	"name": "leave-credit-balance-calculator",
	"version": "1.1.0",
	"description": "",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"export:web": "cd .. && npx expo export --platform web --output-dir electron/dist",
		"build": "electron-builder",
		"build:win": "electron-builder --win"
	},
	"build": {
		"appId": "com.leavecreditbalancecalculator.app",
		"productName": "Leave Credit Balance Calculator",
		"icon": "../assets/images/android/play_store_512.png",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/**/*",
			"main.js",
			"package.json"
		],
		"win": {
			"icon": "../assets/images/android/play_store_512.png",
			"target": [
				"nsis"
			]
		}
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"electron": "^22.3.27",
		"electron-builder": "^25.1.8"
	}
}
